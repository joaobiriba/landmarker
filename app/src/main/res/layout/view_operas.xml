<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1.0">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/main_opera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/colosseo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:layout_margin="16dp"
                android:background="@drawable/gradient_opera_image" />

            <TextView
                android:id="@+id/main_opera_confidence_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confidence: "
                android:textColor="@color/white"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="32dp"
                android:textSize="16sp"/>
        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/second_opera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/colosseo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_margin="16dp"
                android:background="@drawable/gradient_opera_image" />

            <TextView
                android:id="@+id/second_opera_confidence_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confidence: "
                android:textColor="@color/white"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="21dp"
                android:layout_marginBottom="21dp"
                android:textSize="12sp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/third_opera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/colosseo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_margin="16dp"
                android:background="@drawable/gradient_opera_image" />

            <TextView
                android:id="@+id/third_opera_confidence_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confidence: "
                android:textColor="@color/white"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="21dp"
                android:layout_marginBottom="21dp"
                android:textSize="12sp"/>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>

