<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.snapback.magicwhand" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="io.snapback.magicwhand.LandmarkerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="io.snapback.magicwhand.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.snapback.magicwhand.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="io.snapback.magicwhand.TutorialActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="8527ca7e316a139c9a847b012f1d80bce99ad773" />
    </application>

</manifest>
